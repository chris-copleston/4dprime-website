---
import { Icon } from 'astro-icon'
import Layout from '@layouts/Layout.astro'
import Container from '@components/container.astro'
import Sectionhead from '@components/sectionhead.astro'
import Contactform from '@components/contactform.astro'
---

<Layout title="Let's Chat">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Let's Chat</Fragment>
      <Fragment slot="desc">We are here to help.</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">
          Chat with a friendly expert
        </h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Pick a good time to chat from the calendar below.
        </p>
        <!-- Calendly inline widget begin -->
        <div
          class="calendly-inline-widget"
          data-url="https://calendly.com/chris-4dprime/30min?hide_event_type_details=1&hide_gdpr_banner=1&text_color=475569&primary_color=4f46e5"
          style="min-width:320px;height:700px;">
        </div>
        <script
          type="text/javascript"
          src="https://assets.calendly.com/assets/external/widget.js"
          async></script>
        <!-- Calendly inline widget end -->
        <div class="mt-8"></div>
      </div>
      <div class="bg-slate-100 p-5 md:p-8 rounded-xl mb-5">
        <h3 class="font-medium text-gray-800">Email, call or send us post</h3>
        <div class="flex items-center mt-2 space-x-2 text-gray-600">
          <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" /><a
            class="hover:text-indigo-600"
            href="mailto:info@4dprime.com">info@4dprime.com</a
          >
        </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
          <Icon class="text-gray-400 w-4 h-4" name="uil:phone" /><a
            class="hover:text-indigo-600"
            href="tel:+44 (0) 1376 350001">+44 (0) 1376 350001</a
          >
        </div>
        <div class="flex items-center mt-2 space-x-2 text-gray-600 mb-10">
          <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
          <span>
            Greenhoe Lodge, 65 Greenhoe Place,<br />Swaffham, Norfolk. PE37 7EX
          </span>
        </div>
        <h3 class="font-medium text-gray-800 mb-2">
          Enter your details and we will get back to you
        </h3>

        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
