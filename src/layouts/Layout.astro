---
import { ViewTransitions } from 'astro:transitions'
import { SEO } from 'astro-seo'
import Footer from '@components/footer.astro'
import Navbar from '@components/navbar/navbar.astro'

import '@fontsource-variable/inter/index.css'

export interface Props {
  title?: string
  footerMargin?: boolean
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString()

const resolvedImageWithDomain = new URL('/opengraph.jpg', Astro.site).toString()

const { title, footerMargin = true } = Astro.props

const makeTitle = title
  ? title + ' | ' + '4DPrime'
  : '4DPrime ðŸš€ Rocket your Mobile Apps, Websites and Software Projects'
---

<!doctype html>
<html lang="en" style="scrollbar-gutter: stable;">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={makeTitle}
      description="4DPrime ðŸš€ Rocket your Mobile Apps, Websites and Software Projects"
      canonical={canonicalURL}
      twitter={{
        creator: '@chris_copleston',
        site: '@4dprime',
        card: 'summary_large_image',
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: 'website',
          title: `4DPrime ðŸš€ Rocket your Mobile Apps, Websites and Software Projects`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: '4DPrime Homepage Screenshot',
        },
      }}
    />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
    <ViewTransitions fallback="none" />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer margin={footerMargin} />
  </body>
</html>
